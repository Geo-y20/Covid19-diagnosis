include partials/head.pug
script(src='validate.js')
.form
  form(action='/signup' method='POST')
    h2 Sign Up
    p(style="color:red") #{msg}
    p Please fill out this form to create an account
    .form-group
      label(for='username') Username
      input#username(type='text' name='username' required='' oninput="validate_username()") 
      p(id='username_val' style="color:red") 
    .form-group
      label(for='password') Password
      input#password(type='password' name='password' required='' oninput="validate_password()")
      p(id='password_val' style="color:red") 
    p Choose Your Entity:
    label(for="entity") I am :
    select(name="entity")
        option(value="Doctor") Doctor
        option(value="Patient") Patient
    // Additional fields for patients    
    .patient-fields
      h3 For Patient Only:
      .form-group
        input#diabetes(type='checkbox' name='diabetes' value='diabetes')
        label(for='diabetes')  Have Diabetes
        br
      .form-group
        input#hypertension(type='checkbox' name='hypertension' value='hypertension')
        label(for='hypertension')  Have Hypertension
        br
      .form-group
        button.signupbtn(type='submit' disabled=true id="submit_butt") Sign Up
        a(href='/')
          button.cancelbtn(type='button') Cancel

include partials/footer.pug